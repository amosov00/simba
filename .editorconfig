root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 120

[*.js]
max_line_length = 80

[*.{js, html, vue, pug, css, sass, scss, less}]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = false

[*.yml]
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
